{{ "<?xml version=\"1.0\" encoding=\"utf-8\"?>" | safeHTML }}
<feed xmlns="http://www.w3.org/2005/Atom" xmlns:posse="https://posseparty.com/2024/Feed">
  <title>{{ .Site.Title }}</title>
  <subtitle>{{ with .Site.Params.description }}{{ . }}{{ end }}</subtitle>
  <id>{{ .Site.BaseURL }}</id>
  <link href="{{ .Site.BaseURL }}" rel="alternate" type="text/html"/>
  <link href="{{ .Site.BaseURL }}posse.xml" rel="self" type="application/atom+xml"/>
  <updated>{{ now.Format "2006-01-02T15:04:05Z" }}</updated>
  <author>
    <name>{{ .Site.Params.author }}</name>
  </author>

  {{ range (where site.RegularPages "Section" "posts").ByDate.Reverse }}
  <entry>
    <id>{{ .Permalink }}</id>
    <title>{{ .Title }}</title>
    <updated>{{ .Date.Format "2006-01-02T15:04:05Z" }}</updated>
    <published>{{ .Date.Format "2006-01-02T15:04:05Z" }}</published>
    <link href="{{ .Permalink }}" rel="alternate" type="text/html"/>
    {{- $title := .Title }}{{ with .Params.stab }}{{ $title = . }}{{ end }}
    <posse:post format="json">{{ "<![CDATA[" | safeHTML }}
{
  "id": {{ .Permalink | jsonify }},
  "title": {{ $title | jsonify }},
  "url": {{ .Permalink | jsonify }},
  "published_at": {{ .Date.Format "2006-01-02T15:04:05Z" | jsonify }},
  "updated_at": {{ .Lastmod.Format "2006-01-02T15:04:05Z" | jsonify }},
  "author_name": {{ $.Site.Params.author | jsonify }},
  "format_string": "{{ "{{title}}" }}",
  "syndicate": true
}
{{ "]]>" | safeHTML }}</posse:post>
  </entry>
  {{ end }}
</feed>
